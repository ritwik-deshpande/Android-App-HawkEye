<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".GuardActivity">


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:text="Guard ID:"
            android:textSize="40sp"
             />

        <TextView
            android:id="@+id/client_id"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:text="GD83924"
            android:textSize="40sp"
             />
    </LinearLayout>



    <android.support.v7.widget.CardView
        android:id="@+id/registration_card"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_alignParentLeft="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <Button
                android:layout_gravity="center"
                android:id="@+id/entry_log"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:background="@drawable/mybutton"
                android:text="VIEW ENTRY LOG"
                />

            <Button
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:id="@+id/raise"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:onClick="showPopUp"
                android:background="@drawable/mybutton"
                android:text="RAISE ALARM"
                />

            <Button
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:id="@+id/forced_validate"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:background="@drawable/mybutton"
                android:text="FORCED VALIDATION"
                />


            <Button
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:id="@+id/logout"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:background="@drawable/mybutton"
                android:text="LOGOUT"
                />



        </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>


</LinearLayout>