<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.hawkeye">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUp" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".ForgotPassword" />
        <activity
            android:name=".GuardActivity"
            android:noHistory="true" />
        <activity
            android:name=".UserActivity"
             />
        <activity android:name=".AdminActivity"
            android:noHistory="true"/>
        <activity android:name=".AddVehicle" />
        <activity android:name=".MyVehiclesUser" />
        <activity android:name=".MyGuest" />
        <activity android:name=".EntryLogActivity" />
        <activity android:name=".AddGuestActivity" />
        <activity android:name=".UserLogActivity"></activity>
    </application>

</manifest>